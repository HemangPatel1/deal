<div class="container">
<div id="splash_left">
  <img src="assets/left1.png" width="470" height="430" class="splash_image" />
</div>

<div id="signup">
<%= simple_form_for(@business, :as => :business, :url => discover_path) do |f| %>
  <%= f.error_notification %>
  
  <fieldset>
    <h1 class="signup_title">Sign Up</h1>
    <%= f.input :email, :required => true, :autofocus => true %>
    <%= f.input :password, :required => true %>
    <%= f.input :password_confirmation, :required => true %>
      <%= f.input :company_name, required: true %>
      <% Category.all.each do |category| %>
        <%= f.label :category_id, category.name, value: category.id %>
        <%= f.radio_button :category_id, category.id %>
      <% end %>
    <%= f.button :submit, "Sign up" %>
  </fieldset>
<% end %>

</div>
</div>