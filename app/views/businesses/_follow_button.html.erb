<% if current_user.is_a?(Business) %>
  <%= nil %>
<% else %>
  <% unless business.customers.include?(current_user) %>
    <%= button_to 'Follow', follow_business_path(business), :id => "business_#{business.id}", class: 'follow' %>
  <% else %>
    <%= button_to 'Unfollow', follow_business_path(business), class: 'follow' %>
  <% end %>
<% end %>


